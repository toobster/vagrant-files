# -*- mode: ruby -*-
# vi: set ft=ruby :

NNODES=3

$script = <<-SCRIPT
echo "ssh-rsa " >> /home/vagrant/.ssh/authorized_keys
echo "ssh-rsa " >> /home/vagrant/.ssh/authorized_keys
SCRIPT

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
  (0..NNODES - 1).each do |i|
    config.vm.define "elk-#{i}" do |node|
      node.vm.box = "generic/rocky9"
      node.vm.hostname = "elk-#{i}"
      config.vm.provider "virtualbox" do |v|
          v.memory = 9216
          v.cpus = 4
      end
      node.vm.network "private_network", ip: "192.168.30.12#{i}"
      node.vm.provision "shell", inline: $script
      node.vm.provision "shell", inline: "echo hello from node #{i}"
      node.vm.provision :hosts do |provisioner|
        provisioner.add_host '192.168.30.120', ['elk-0.log.shared-info-platform.ch', 'elk-0']
        provisioner.add_host '192.168.30.121', ['elk-1.log.shared-info-platform.ch', 'ekl-1']
        provisioner.add_host '192.168.30.122', ['elk-2.log.shared-info-platform.ch', 'elk-2']
      end
    end
  end
end